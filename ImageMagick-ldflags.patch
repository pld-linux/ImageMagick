--- ImageMagick-6.9.10-19/configure.ac.orig	2018-12-21 07:11:13.258445539 +0100
+++ ImageMagick-6.9.10-19/configure.ac	2018-12-21 07:12:20.068444776 +0100
@@ -3937,7 +3937,23 @@
 MAGICK_CXXFLAGS="$CXXFLAGS"
